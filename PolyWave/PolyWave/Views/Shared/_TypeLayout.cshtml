@model MediaServiceLib.Models.MediaListModel

@section link {
    <link href="~/Content/Content.css" rel="stylesheet" />
}

<h1 class="title">
    @Model.MediaList[0].Type
</h1>

@for (int i = 0; i < Model.MediaList.Count; i++)
{
<div class="content-body">
    @if (Model.MediaList[i].Type == MediaServiceLib.Models.MediaType.Video)
    {
        @Model.MediaList[i].Author
        <br />
        @Model.MediaList[i].Caption
        <br />
        <video controls="controls" class="video">
            <source src="@Url.Content(String.Format("{0}", Model.MediaList[i].Path))" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
        <br />
        @Model.MediaList[i].Description
    }

    else if (Model.MediaList[i].Type == MediaServiceLib.Models.MediaType.Gif)
    {
        @Model.MediaList[i].Author
        <br />
        @Model.MediaList[i].Caption
        <br />
        <img src="@Url.Content(String.Format("{0}", Model.MediaList[i].Path))" />
        <br />
        @Model.MediaList[i].Description
    }

    else if (Model.MediaList[i].Type == MediaServiceLib.Models.MediaType.Image)
    {
        @Model.MediaList[i].Author
        <br />
        @Model.MediaList[i].Caption
        <br />
        <img src="@Url.Content(String.Format("{0}", Model.MediaList[i].Path))" />
        <br />
        @Model.MediaList[i].Description
    }
    else if (Model.MediaList[i].Type == MediaServiceLib.Models.MediaType.Audio)
    {
        @Model.MediaList[i].Author
        <br />
        @Model.MediaList[i].Caption
        <br />
        <audio class="audios" controls>
            <source src="@Url.Content(String.Format("{0}", Model.MediaList[i].Path))" type="audio/mp3" />
        </audio>
        <br />
        @Model.MediaList[i].Description
    }
</div>
}
